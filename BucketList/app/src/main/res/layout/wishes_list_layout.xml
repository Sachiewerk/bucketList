<?xml version="1.0" encoding="utf-8"?>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_marginTop="12dp"
            android:background="@color/md_white_1000"
            >
            <ImageView
                tools:src="@mipmap/ic_launcher"
                android:contentDescription="Image for your wish"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/rv_wish_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                tools:text="Skydiving"
                android:maxWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_title"
                android:layout_alignParentBottom="true"
                app:layout_constraintLeft_toLeftOf="@+id/rv_wish_photo"
                android:layout_marginTop="17dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_wish_photo" />
            <TextView
                tools:text="adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_category"
                android:layout_alignBaseline="@+id/rv_wish_price"
                android:layout_alignBottom="@+id/rv_wish_price"
                android:layout_marginRight="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rv_wish_title" />
    <TextView
        tools:text="2000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_wish_price"
        android:layout_below="@+id/rv_wish_photo"
        android:layout_toEndOf="@+id/rv_wish_photo"
        app:layout_constraintLeft_toLeftOf="@+id/rv_wish_category"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_wish_category"
        app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>