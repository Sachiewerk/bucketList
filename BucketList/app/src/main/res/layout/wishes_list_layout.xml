<?xml version="1.0" encoding="utf-8"?>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="16dp"
            >
            <ImageView
                tools:src="@mipmap/ic_launcher"
                android:contentDescription="Image for your wish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_photo"
                android:layout_margin="2dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                tools:text="Skydiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_title"
                android:layout_alignParentBottom="true"
                app:layout_constraintLeft_toLeftOf="@+id/rv_wish_photo"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_wish_photo" />
            <TextView
                tools:text="2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_price"
                android:layout_below="@+id/rv_wish_photo"
                android:layout_toEndOf="@+id/rv_wish_photo"
                app:layout_constraintLeft_toLeftOf="@+id/rv_wish_category"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_wish_category" />
            <TextView
                tools:text="adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rv_wish_category"
                android:layout_alignBaseline="@+id/rv_wish_price"
                android:layout_alignBottom="@+id/rv_wish_price"
                android:layout_toEndOf="@+id/rv_wish_title"
                app:layout_constraintLeft_toLeftOf="@+id/rv_wish_title"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_wish_title" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
            />
        </android.support.constraint.ConstraintLayout>